<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/bg_register">

        <android.support.v7.widget.CardView
            android:id="@+id/prod_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:cardBackgroundColor="@color/btn_login_bg">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tv_codigo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="codigo"
                        android:textColor="@color/lbl_name"
                        />
                    <TextView
                        android:id="@+id/tv_marca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_marca"
                        android:drawableStart="@drawable/ic_domain_black_24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />
                    <TextView
                        android:id="@+id/tv_descripcion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hint_descripcion"
                        android:textSize="20dp"
                        android:drawableStart="@drawable/ic_description_black_24dp"
                        android:layout_below="@+id/tv_marca"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="16dp" />
                    <TextView
                        android:id="@+id/tv_precio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_attach_money_black_24dp"
                        android:textSize="15dp"
                        android:text="@string/hint_precio"
                        android:textColor="@color/input_login_hint"
                        android:layout_below="@+id/tv_descripcion"
                        android:layout_toEndOf="@+id/tv_descripcion"
                        android:layout_marginTop="33dp" />
                </RelativeLayout>

        </android.support.v7.widget.CardView>

</LinearLayout>